@model IEnumerable< WK.Tech.Domain.Dtos.CategoryDto>

@{
    ViewData["Title"] = "Categorias";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h1>Administração de Categorias</h1>
    <hr />
    <div class="row">
        <a asp-controller="AdminProducts" asp-action="NewCategory" class="btn btn-success right">+ Adicionar Nova</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col" class="text-center">Código</th>
                    <th scope="col" class="text-center">Nome</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
                </thead>
                <tbody>
                   @foreach (var category in Model.OrderBy(p => p.Name))
                   {

                      <tr>    
                        <td class="text-center">@category.Code</td> 
                        <td>@category.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Exemplo básico" style="width: 150px;">
                                <a asp-controller="AdminProducts" asp-action="UpdateCategory" asp-route-id="@category.Id" class="btn btn-warning right m-1">Editar</a>
                                <a asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger right m-1">Excluir</a>
                            </div>
                        </td>
                     </tr> 
                   }             
                </tbody>
            </table>
        </div>
    </div>
</div>
